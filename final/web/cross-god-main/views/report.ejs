<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Report to God</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #2c2f33;
        color: #ffffff;
        margin: 0;
        padding: 0;
      }

      h1 {
        font-size: 2.5rem;
        margin-bottom: 30px;
        color: #7289da;
      }

      .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .form-wrapper {
        background-color: #23272a;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 400px;
      }

      .form-label {
        font-weight: bold;
        color: #99aab5;
      }

      input[type="text"] {
        border: none;
        background-color: #40444b;
        color: #ffffff;
        padding: 12px;
        border-radius: 4px;
        width: 100%;
        margin-bottom: 20px;
      }

      input[type="submit"] {
        background-color: #7289da;
        color: white;
        border: none;
        padding: 12px;
        border-radius: 4px;
        width: 100%;
        cursor: pointer;
      }

      input[type="submit"]:hover {
        background-color: #5d77c7;
      }

      .loading {
        width: 50px;
        height: 50px;
        border: 5px solid rgba(255, 255, 255, 0.3);
        border-top: 5px solid #7289da;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 20px auto;
      }

      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      .alert {
        padding: 12px;
        margin: 10px 0;
        border-radius: 4px;
        text-align: center;
        display: none;
      }

      .alert-success {
        background-color: #43b581;
      }

      .alert-danger {
        background-color: #f04747;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h1>God Report</h1>
      <div class="form-wrapper">
        <form id="visit-form">
          <label for="url" class="form-label">Enter note URL:</label>
          <input type="text" name="url" id="url" required />
          <input type="submit" value="Visit Note" />
        </form>

        <div class="loading" id="loading" style="display: none"></div>

        <div class="alert alert-danger" id="error-message"></div>
        <div class="alert alert-success" id="success-message"></div>
      </div>
    </div>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"
      integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script>
      $(document).ready(function () {
        const form = $("#visit-form");
        const successMessage = $("#success-message");
        const errorMessage = $("#error-message");
        const loadingAnimation = $("#loading");

        form.submit(function (event) {
          event.preventDefault();
          const url = $("#url").val();
          successMessage.slideUp();
          errorMessage.slideUp();
          loadingAnimation.show();

          $.ajax({
            type: "POST",
            url: "",
            data: { url: url },
            success: function (data) {
              loadingAnimation.hide();
              if (data.success) {
                successMessage.text(data.success).slideDown();
              } else {
                errorMessage.text(data.error).slideDown();
              }
            },
            error: function (jq, status) {
              loadingAnimation.hide();
              const response = jq.responseJSON;
              if (response) {
                errorMessage.text(response.error).slideDown();
              } else {
                errorMessage
                  .text("An error occurred while processing the request.")
                  .slideDown();
              }
            },
          });
        });
      });
    </script>
  </body>
</html>
